# Environment Variables for SyncApp Server

# Server Configuration
PORT=9000
NODE_ENV=development

# Database Configuration
# For local development
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/syncapp?retryWrites=true&w=majority
# For production (Vercel deployment) - use MongoDB Atlas
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/syncapp?retryWrites=true&w=majority

# Security
JWT_SECRET=your_jwt_secret_key_here

# Encryption (for API keys)
ENCRYPTION_KEY=your-32-character-secret-key-here!!
ENCRYPTION_IV=your-16-char-iv!!

# CORS Configuration
BACKEND_API_URL=http://localhost:9000
CORS_ORIGIN=http://localhost:5173,https://sync-app-client.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Medium API (optional for development)
MEDIUM_API_URL=https://api.medium.com/v1
