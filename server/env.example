# Environment Variables for SyncApp Server

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/syncapp
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/syncapp

# Security
JWT_SECRET=your_jwt_secret_key_here

# Encryption (for API keys)
ENCRYPTION_KEY=your-32-character-secret-key-here!!
ENCRYPTION_IV=your-16-char-iv!!

# CORS Configuration
BACKEND_API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Medium API (optional for development)
MEDIUM_API_URL=https://api.medium.com/v1
